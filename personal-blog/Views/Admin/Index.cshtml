
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-3">
    <h3 class="col text-center">Stats</h3>
</div>

<div class="row mb-5">

    <div class="col-lg-3 col-md-6 col-sm-12 mb-3">
        <a href="/Admin/Messages" style="all: unset; cursor: pointer;">
            <div class="card shadow">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-in-bg bg-azura text-white rounded-circle"><i class="fa fa-pencil-square-o"></i></div>
                        <div class="ml-4">
                            <span>Posts</span>
                            <h4 class="mb-0 font-weight-medium">@ViewBag.Posts</h4>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <div class="col-lg-3 col-md-6 col-sm-12 mb-3">
        <a href="/Admin/Categories" style="all: unset; cursor: pointer;">
            <div class="card shadow">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-in-bg bg-success text-white rounded-circle"><i class="fa fa-bars"></i></div>
                        <div class="ml-4">
                            <span>Categories</span>
                            <h4 class="mb-0 font-weight-medium">@ViewBag.Categories</h4>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <div class="col-lg-3 col-md-6 col-sm-12 mb-3">
        <a href="/Admin/Messages" style="all: unset; cursor: pointer;">
            <div class="card shadow">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-in-bg bg-warning text-white rounded-circle"><i class="fa fa-comments"></i></div>
                        <div class="ml-4">
                            <span>Unread Messages</span>
                            <h4 class="mb-0 font-weight-medium">@ViewBag.UnreadMessages</h4>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <div class="col-lg-3 col-md-6 col-sm-12 mb-3">
        <a href="/Admin/Accounts" style="all: unset; cursor: pointer;">
            <div class="card shadow">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-in-bg bg-blush text-white rounded-circle"><i class="fa fa-globe"></i></div>
                        <div class="ml-4">
                            <span>Accounts</span>
                            <h4 class="mb-0 font-weight-medium">@ViewBag.Accounts</h4>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

</div>

@Html.Action("LatestPosts", "Admin")