@using personal_blog.Models
@model List<Message>

@{
    ViewBag.Title = "Messages";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-3">
    <h3 class="col text-center">Messages</h3>
</div>

<div class="table-responsive">
    <table class="table table-hover">
        <thead class="text-center" style="border-bottom: 2px solid gray;">
            <tr>
                <th class="font-weight-bold text-center">Fullname</th>
                <th class="font-weight-bold text-center">Email</th>
                <th class="font-weight-bold text-center">Details</th>
                <th class="font-weight-bold text-center">Date</th>
                <th class="font-weight-bold text-center">Operations</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var x in Model)
            {
                <tr>
                    <td class="text-center">@x.Fullname</td>
                    <td class="text-center">@x.EMail</td>
                    <td class="text-center text-wrap">@x.Details</td>
                    <td class="text-center">@(((DateTime)x.Date).ToString("dd'/'MM'/'yyyy"))</td>
                    <td class="text-center">
                        <ul class="p-0 m-0">
                            <li class="d-inline px-2">@Html.ActionLink(" ", "SaveAsRead", new { id = x.ID }, new { @class = "text-success fa fa-check-circle", @style = "font-size: 22px;", @title = "Save as Read", onclick = "return confirm('Are You Sure You Want to Mark It as Read?')" })</li>
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>