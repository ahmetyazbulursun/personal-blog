@using personal_blog.Models
@model List<Post>

@{
    ViewBag.Title = "PostDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-3">
    <h3 class="col text-center">Post Details</h3>
</div>

@foreach (var x in Model)
{
    <div class="row mb-3">
        <div class="col-12 text-center font-weight-bold">
            <img class="img-fluid" src="@x.Image" />
        </div>
    </div>
    <div class="row my-5 text-center">
        <div class="col-sm-12 col-md-4 col-lg-4">
            <label class="form-label font-weight-bold">Header:</label>
            <p class="d-inline">@x.Header</p>
        </div>
        <div class="col-sm-12 col-md-4 col-lg-4">
            <label class="form-label font-weight-bold">Category:</label>
            <p class="d-inline">@x.Category.Name</p>
        </div>
        <div class="col-sm-12 col-md-4 col-lg-4">
            <label class="form-label font-weight-bold">Date:</label>
            <p class="d-inline">@(((DateTime)x.Date).ToString("dd'/'MM'/'yyyy"))</p>
        </div>
    </div>

    <div class="row mb-3 bg-light">
        <div class="col-12">
            <label class="form-label font-weight-bold mb-3 d-flex justify-content-center text-center py-2 font-30 text-dark">
                Details
                <a href="/Admin/EditPost/@x.ID" title="Edit" class="text-success ml-3"><i class="fa fa-edit" style="font-size: 28px;"></i></a>
            </label>

            <p class="d-inline">@Html.Raw(x.Details)</p>
        </div>
    </div>
}