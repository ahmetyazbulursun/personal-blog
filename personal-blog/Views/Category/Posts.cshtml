@using personal_blog.Models
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Post>

@{
    ViewBag.Title = "Posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 col-lg-8 main-content">
    <h2 class="my-5">@ViewBag.CategoryName</h2>
    <div class="row mb-5 mt-5">
        <div class="col-md-12">
            @foreach (var x in Model)
            {
                <div class="post-entry-horzontal">
                    <a href="/Post/PostDetails/@x.ID" class="shadow">
                        <div class="image element-animate" data-animate-effect="fadeIn" style="background-image: url(@x.Image);"></div>
                        <span class="text">
                            <div class="post-meta">
                                <span class="author mr-2"><img src="@x.Author.Image" alt="image"> @x.Author.Fullname</span>&bullet;
                                <span class="mr-2">@(((DateTime)x.Date).ToString("dd'/'MM'/'yyyy")) </span> &bullet;
                                <span class="ml-2"><span class="fa fa-comments"></span> 3</span>
                            </div>
                            <h2>@x.Header</h2>
                        </span>
                    </a>
                </div>
            }
        </div>
    </div>
</div>