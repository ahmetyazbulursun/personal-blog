@using personal_blog.Models
@model List<Post>

<section class="site-section pt-5 pb-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="owl-carousel owl-theme home-slider">
                    @foreach (var x in Model)
                    {
                        <div>
                            <a href="/Post/PostDetails/@x.ID" class="a-block d-flex align-items-center height-lg" style="background-image: url('@x.Image'); ">
                                <div class="text half-to-full">
                                    <span class="category mb-5">@x.Category.Name</span>
                                    <div class="post-meta">

                                        <span class="author mr-2"><img src="@x.Author.Image" alt="image"> @x.Author.Fullname</span>&bullet;
                                        <span class="mr-2">@(((DateTime)x.Date).ToString("dd'/'MM'/'yyyy")) </span> &bullet;
                                        <span class="ml-2"><span class="fa fa-comments"></span> 3</span>

                                    </div>
                                    <h3>@x.Header</h3>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>