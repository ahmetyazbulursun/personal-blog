@using personal_blog.Models
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Post>

<div class="col-md-12 col-lg-8 main-content">
    <div class="row">
        <div class="col-md-6">
            <h2 class="mb-4">Latest Posts</h2>
        </div>
    </div>
    <div class="row">
        @foreach (var x in Model)
        {
            <div class="col-md-6">
                <a href="/Post/PostDetails/@x.ID" class="blog-entry element-animate" data-animate-effect="fadeIn">
                    <img src="@x.Image" alt="Image placeholder">
                    <div class="blog-content-body">
                        <div class="post-meta">
                            <span class="author mr-2"><img src="@x.Author.Image" class="img-fluid" alt="author"> @x.Author.Fullname</span>&bullet;
                            <span class="mr-2">@(((DateTime)x.Date).ToString("dd'/'MM'/'yyyy")) </span> &bullet;
                            <span class="ml-2"><span class="fa fa-comments"></span> 3 </span>
                        </div>
                        <h2>@x.Header</h2>
                    </div>
                </a>
            </div>
        }
    </div>
</div>